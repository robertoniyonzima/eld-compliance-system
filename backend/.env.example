# ============================================
# ELD Compliance System - Environment Variables
# ============================================

# Django Configuration
SECRET_KEY=your-secret-key-here-generate-with-secrets-token-urlsafe-50
DEBUG=True

# Database (Local Development)
DB_NAME=eld_compliance
DB_USER=postgres
DB_PASSWORD=your_password
DB_HOST=localhost
DB_PORT=5432

# Database (Production - Render.com)
# DATABASE_URL=postgres://user:password@host:5432/database
# Render provides this automatically

# Render Configuration (Production only)
# RENDER_EXTERNAL_HOSTNAME=your-app.onrender.com

# Email Configuration (Gmail)
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Optional: Timezone
TZ=Africa/Kigali

# Optional: Python Unbuffered (for better logs)
PYTHONUNBUFFERED=1
